{
  "name": "solo-leveling-system",
  "version": "1.0.0",
  "description": "Персональная Система Саморазвития: Solo Leveling System (offline, Electron + React + Vite + Tailwind + Zustand + Dexie)",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "electron:dev": "cross-env VITE_DEV_SERVER=true electron electron/dev.cjs",
    "build": "vite build",
    "electron:prod": "electron electron/main.cjs",
    "app:pack": "electron-builder --win --x64"
  },
  "dependencies": {
    "classnames": "2.5.1",
    "dexie": "4.0.10",
    "lucide-react": "0.471.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hot-toast": "^2.6.0",
    "recharts": "2.12.7",
    "zustand": "4.5.5"
  },
  "devDependencies": {
    "@types/node": "20.14.12",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "4.3.2",
    "autoprefixer": "10.4.20",
    "cross-env": "7.0.3",
    "electron": "31.3.1",
    "electron-builder": "25.1.8",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.13",
    "typescript": "^5.9.3",
    "vite": "5.4.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.sls.app",
    "productName": "Solo Leveling System",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "artifactName": "SLS-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  }
}
